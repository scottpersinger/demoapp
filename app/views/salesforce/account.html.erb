<h1>Account</h1>

<% form_for @account do %>
    <label>Name</label>
    <%= text_field :name %>
    <%= submit_tag 'Save' %>
<% end %>

<h2>Contacts</h2>
<table border="1">
    <tr>
        <th>id</th><th>Name</th><th>Email</th><th>Phone</th>
    </tr>
    <% @contacts.each do |contact| %>
      <% next if contact.nil? %>
      <tr>
          <td><%= contact.id %></td>
          <td><%= contact.firstname %> <%= contact.lastname %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
      </tr>
    <% end %>
</table>